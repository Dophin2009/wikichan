{
    "compileOnSave": true,
    "compilerOptions": {
        "baseUrl": ".",
        "paths": { "*": ["types/*"] },
        "target": "es6",
        "preserveConstEnums": true,
        "sourceMap": false,
        "removeComments": false,
        "noImplicitAny": true,
        "outDir": "ext/js"
    },
    "include": [
        "src/*"
    ],
    "exclude": [
        "node_modules"
    ],
}