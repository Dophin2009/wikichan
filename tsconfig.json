{
    "compileOnSave": true,
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "*": ["types/*"]
        },
        "outDir": "ext/js",

        "target": "es6",
        "preserveConstEnums": true,
        "sourceMap": false,
        "removeComments": false,
        "noImplicitAny": true,

        "typeRoots": [
            "node_modules/@types",
            "node_modules/web-ext-types"
        ]
    },
    "include": [
        "src/*", "src/ts/wikichan.ts"
    ],
    "exclude": [
        "node_modules"
    ],
}